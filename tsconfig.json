{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "svelte-lib",
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "ESNext",
		"lib": [
			"es2020",
			"ESNext",
			"DOM"
		],
		"target": "es2020",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"paths": {
			"$lib": [
				"src/lib"
			],
			"$lib/*": [
				"src/lib/*"
			]
		},
		"strict": false
	},
    "include": [
		"src/**/*.d.ts",
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte",
		"src/**/*.css"
	],
	"exclude": [
		"dist",
		"build",
		"node_modules"
	]
}
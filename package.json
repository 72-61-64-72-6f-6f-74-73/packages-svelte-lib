{
	"name": "@radroots/svelte-lib",
	"version": "0.0.0",
	"private": true,
	"license": "GPLv3",
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"dev": "svelte-package -w",
		"build": "just build && svelte-package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"peerDependencies": {
		"svelte": "^5.0.0-next.1"
	},
	"devDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@types/luxon": "^3.4.2",
		"publint": "^0.1.9",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.6.0",
		"svelte-preprocess": "^5.1.0",
		"tslib": "^2.4.1",
		"typescript": "^5.3.3",
		"vite": "^5.0.11"
	},
	"dependencies": {
		"@nostr-dev-kit/ndk": "^2.7.1",
		"@nostr-dev-kit/ndk-cache-dexie": "^2.3.1",
		"@radroots/sveltekit-search-params": "workspace:*",
		"@radroots/theme": "workspace:*",
		"@sveltekit-i18n/base": "^1.3.7",
		"@sveltekit-i18n/parser-icu": "^1.0.8",
		"luxon": "^3.5.0"
	},
	"publishConfig": {
		"access": "public"
	}
}